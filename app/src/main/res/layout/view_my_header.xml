<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기부처"
        android:id="@+id/text_donate"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워"
        android:id="@+id/text_follower"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_donate"
        android:layout_toEndOf="@+id/text_donate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        android:id="@+id/text_following"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_follower"
        android:layout_toEndOf="@+id/text_follower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_modify_profile"
        android:id="@+id/btn_modify"
        android:layout_alignBottom="@+id/image_profile"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 음성 듣기"
        android:id="@+id/btn_sound"
        android:layout_alignTop="@+id/text_name"
        android:layout_toRightOf="@+id/text_name"
        android:layout_toEndOf="@+id/text_name"
        android:layout_alignBottom="@+id/text_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_name"
        android:layout_below="@+id/image_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_message"
        android:layout_below="@+id/btn_sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>