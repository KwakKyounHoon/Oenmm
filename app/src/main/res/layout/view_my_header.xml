<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_donate"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:maxLines="1"
            android:layout_toEndOf="@+id/image_profile"
            android:layout_toRightOf="@+id/image_profile"
            android:gravity="center|top"
            android:text="기부처" />
        <TextView
            android:id="@+id/donate_message"
            android:layout_width="70dp"
            android:layout_alignLeft="@+id/text_donate"
            android:layout_alignRight="@+id/text_donate"
            android:gravity="center"
            android:layout_height="25dp"
            android:textColor="#C0C0C0"
            android:layout_below="@id/text_donate"
            android:text="기부처"
            android:layout_toEndOf="@+id/image_profile"
            android:layout_toRightOf="@+id/image_profile"/>
        
        <TextView
            android:layout_below="@+id/text_follower"
            android:layout_width="54dp"
            android:text="팔로워"
            android:textColor="#C0C0C0"
            android:gravity="center"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/text_follower"
            android:layout_alignRight="@+id/text_follower" />

        <TextView
            android:layout_below="@+id/text_following"
            android:layout_width="54dp"
            android:text="팔로잉"
            android:textColor="#C0C0C0"
            android:gravity="center"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/text_following"
            android:layout_alignRight="@+id/text_following" />

        <TextView
            android:id="@+id/text_follower"
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/text_donate"
            android:layout_toRightOf="@+id/text_donate"
            android:gravity="center|top"
            android:text="팔로워" />

        <TextView
            android:id="@+id/text_following"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/text_follower"
            android:layout_toRightOf="@+id/text_follower"
            android:gravity="center|top"
            android:text="팔로잉" />

        <Button
            android:id="@+id/btn_question"
            android:layout_width="184dp"
            android:layout_height="32dp"
            android:layout_below="@+id/donate_message"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_profile"
            android:layout_toRightOf="@+id/image_profile"
            android:background="@color/toolbar_text_color"
            android:text="프로필 수정"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_questioner_name"
            android:layout_alignTop="@+id/text_questioner_name"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/text_questioner_name"
            android:layout_toRightOf="@+id/text_questioner_name"
            android:src="@drawable/ic_speaker"
            android:text="프로필 음성 듣기" />

        <TextView
            android:id="@+id/text_questioner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_profile"
            android:layout_below="@+id/image_profile"
            android:layout_marginTop="12dp"
            android:text="User name" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_profile"
            android:layout_below="@+id/btn_sound"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:text="New Text" />

    </RelativeLayout>

</RelativeLayout>