<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick=""
        android:text="+1000원" />

    <Button
        android:id="@+id/btn_5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_1000"
        android:text="+5000원" />

    <Button
        android:id="@+id/btn_10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_5000"
        android:text="+10000원" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_10000">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text_price"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_alignTop="@+id/btn_reset"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_reset"
            android:gravity="center"
            android:text="        0" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_price"
            android:text="정정" />


    </RelativeLayout>


</RelativeLayout>
